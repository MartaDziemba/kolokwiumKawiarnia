<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="10dp"
    tools:context="com.example.marta.kolokwiumkawiarnia.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Witaj w kawiarni XYZ!"
        android:gravity="center"
        android:layout_marginBottom="120dp"
        android:textSize="30dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aby zlozyc zamowienie podaj numer stolika i wybierz kawe z listy."
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimary"/>

    <EditText
        android:id="@+id/tableNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Podaj numer"
        android:layout_marginBottom="180dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wybierz danie"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"/>

</LinearLayout>
